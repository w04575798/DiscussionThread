@model DiscussionThread.Models.DiscussionViewModel

@{
    ViewData["Title"] = "Discussion Details";
}

<h1>@Model.Discussion.Title</h1>
<p>@Model.Discussion.Content</p>
<p><strong>Created on:</strong> @Model.Discussion.CreateDate.ToString("MM/dd/yyyy")</p>

<!-- Displaying the number of comments -->
<p><strong>Number of comments:</strong> @Model.Comments.Count</p>

<!-- Optional: If you want to display a message when there are no comments -->
@if (Model.Comments.Count == 0)
{
    <p>No comments yet.</p>
}

<!-- Edit and Back links -->
<div>
    <a asp-action="Edit" asp-route-id="@Model.Discussion.DiscussionId" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
