@model DiscussionThread.Models.Comment

@{
    ViewData["Title"] = "Comment Details";
}

<h1>Comment Details</h1>

<div>
    <h4>Comment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreateDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreateDate)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Discussion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Discussion.Title) <!-- Displaying the Discussion title -->
        </dd>
    </dl>
</div>

<div>
    <h5>Discussion Details</h5>
    <a asp-action="Details" asp-route-id="@Model?.Discussion.DiscussionId" class="btn btn-info">View Discussion</a>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.CommentId" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
